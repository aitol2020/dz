<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    tools:context=".MainActivityCamera"
   >

    <ImageView
        android:id="@+id/image1"
        android:layout_width="210dp"
        android:layout_height="220dp"
        android:background="@drawable/regnum_picturel"
        app:layout_constraintRight_toLeftOf="@+id/image2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />
    <ImageView
        android:id="@+id/image2"
        android:layout_width="200dp"
        android:layout_height="220dp"
        android:background="@drawable/google_image"
        app:layout_constraintLeft_toRightOf="@+id/image1"
        app:layout_constraintTop_toTopOf="@+id/image1"
        app:layout_constraintRight_toRightOf="parent"

        />


    <ImageView
        android:id="@+id/image3"
        android:layout_width="210dp"
        android:layout_height="220dp"
        android:background="@drawable/yutub_knopka"
        app:layout_constraintTop_toBottomOf="@+id/image1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/image4"
        android:layout_width="200dp"
        android:layout_height="220dp"
        android:background="@drawable/android_market"
        app:layout_constraintLeft_toRightOf="@+id/image3"
        app:layout_constraintTop_toBottomOf="@+id/image2"
        app:layout_constraintRight_toRightOf="parent"/>


    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent">


        <ImageView
            android:id="@+id/foto"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginBottom="150dp"
            android:layout_weight="1"
            android:paddingTop="50dp"
            android:src="@drawable/ic_baseline_camera_24"


            />

        <ImageView
            android:id="@+id/video1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:paddingTop="50dp"
            android:src="@drawable/ic_baseline_videocam_24">

        </ImageView>


    </LinearLayout>
    <Button
        android:id="@+id/videoclikc"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Video"
        android:textAllCaps="false"
        android:backgroundTint="#FBD26A"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="50dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <Button
        android:id="@+id/fotoclikc"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Foto"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:backgroundTint="#FBD26A"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>